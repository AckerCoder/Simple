<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewInventory"
        android:layout_width="343dp"
        android:layout_height="104dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10.5dp"
        android:layout_marginBottom="10.5dp"
        app:cardBackgroundColor="#FCE300"
        app:cardCornerRadius="5dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/inventoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="#00FFFFFF"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Almacén"
                android:textColor="#000000"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/inventoryLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Ubicación Almacén"
                android:textColor="#000000" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>